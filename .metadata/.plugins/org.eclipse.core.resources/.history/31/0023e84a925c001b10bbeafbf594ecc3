<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->	
	
	<appender name="storyFile" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="logs/story.log" />
		<param name="append" value="false" />		
		<param name="DatePattern" value="'.'yyyy-MM-dd" />    	
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{dd MMM yyyy HH:mm:ss,SSS} %-5p: %c - %m%n" />
		</layout>
	</appender>
	
	<appender name="applicationFile" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="logs/application.log" />
		<param name="append" value="false" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />   	
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{dd MMM yyyy HH:mm:ss,SSS} %-5p: %c - %m%n" />
		</layout>
	</appender>
		
	<appender name="console" class="org.apache.log4j.ConsoleAppender"> 
<!-- 		<param name="Target" value="System.out"/>  -->
		<layout class="org.apache.log4j.PatternLayout"> 
			<param name="ConversionPattern" value="%d{dd MMM yyyy HH:mm:ss,SSS} %-5p: %c - %m%n" />
		</layout> 
	</appender> 
		
	
	<!-- Application Loggers -->
	 <logger name="com.mastercard.ept">
		<level value="debug" />		
	</logger> 
	
	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.core">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework.beans">
		<level value="warn" />
	</logger>
	
	<logger name="org.springframework.context">
		<level value="warn" />
	</logger>

	<logger name="org.springframework.web">
		<level value="debug" />
	</logger>
	
	<logger name="org.springframework.http">
		<level value="debug"></level>
	</logger>

	<logger name="org.hibernate.type">
		<level value="warn" />
	</logger>

	<logger name="org.apache.commons.httpclient">
    	<level value="DEBUG"/>
	</logger>
	
	<logger name="httpclient.wire">
		<level value="DEBUG"/>
	</logger>
	
	<logger name="org.apache.http.wire">
		<level value="error"/>
	</logger>
	
	<logger name="com.mastercard.testing" >
		<level value="${level}" />	
		<appender-ref ref="storyFile" />			
	</logger> 
	
	<logger name="com.mastercard.ept.qa.core.api.rest.httpclient">
		<level value="debug" />
	</logger>
	
	<logger name="org.apache.http.headers">
    	<level value="info"/>
	</logger>	
	
	<logger name="com.mastercard.testing.bdd.rest.implementation.service.RestService" >
		<level value="info"/>
	</logger>
	
	<logger name="com.mastercard.testing.mtaf.jbehave">
	<level value="error"/>
	</logger>

	<!-- Root Logger -->
	<root>
		<priority value="debug" />		
		<appender-ref ref="applicationFile" />
	</root>
	
	    <root>
        <level value="INFO" />
        <appender-ref ref="storyFile" />
    </root>
		
	
</log4j:configuration>